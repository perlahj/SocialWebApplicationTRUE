@model SozialWebApplication.Models.ViewModels.NameCardViewModel

<div class="bc">
    @{
        ViewBag.Title = "Banner";
    }

    <br />
    <div class="namecard-button">
        <a href="/Home/NewsfeedGroups/111">
            <img src="/Myndir/logo.jpg" class="name-logo" alt="name-logo" />

        </a>
        <div class="my-name">
            @Html.ActionLink(@Html.ViewContext.HttpContext.User.Identity.Name, "OwnNameCard", "NameCards")
        </div>

        @using (Html.BeginForm("LogOff", "Account", new { ReturnUrl = "/Account/Login" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div>
                <input type="submit" value="Log Out" class="logout-button" />
            </div>
        }

    </div>

    <br />

    <div class="overflowceeper">
        <div class="feed-body">
            @using (Html.BeginForm("Search", "NameCards", FormMethod.Post))
{
    <div class="searching">
        <input type="text" id="search" name="search" class="search" placeholder="Search ..." />
        <div class="button">
            <a href="SearchGroups"><input type="submit" value=" " name="submit" class="search-button" /></a>
        </div>
    </div>
}

<div class="users-lists">
    <div class="users-labels">
        <h4 class="my-friends-label">All my friends</h4>
        <h4 class="all-users-label">All users </h4>
        <h4 class="search-users-label">Search results</h4>
    </div>

    <div class="my-followers">
        <dl>
            @foreach (var item in Model.AllFollowing)
            {
                if (item.FullName != null)
                {
                    <dt class="my-friends-list">@Html.ActionLink(item.FullName, "OthersNameCard", "NameCards", new { id = item.Id }, null); </dt>
                }
                else
                {
                    <dt class="my-friends-list">@Html.ActionLink(item.UserName, "OthersNameCard", "NameCards", new { id = item.Id }, null); </dt>
                }
            }
        </dl>
    </div>

    <div class="all-followers">
        <dl>
            @foreach (var item in Model.AllUsers)
            {
                if (item.FullName != null)
                {
                    <dt class="all-users-list">@Html.ActionLink(item.FullName, "OthersNameCard", "NameCards", new { id = item.Id }, null) </dt>
                }
                else
                {
                    <dt class="all-users-list">@Html.ActionLink(item.UserName, "OthersNameCard", "NameCards", new { id = item.Id }, null) </dt>
                }
            }
        </dl>
    </div>

    <div class="search-followers">
        <dl>
            @if (Model.SearchResultsUsers.Count() == 0)
            {
            }
            else
            {
                foreach (var item in Model.SearchResultsUsers)
                {
                    if (item.FullName != null)
                    {
                        <dt class="search-users-list">@Html.ActionLink(item.FullName, "OthersNameCard", "NameCards", new { id = item.Id }, null) </dt>
                    }
                    else
                    {
                        <dt class="search-users-list">@Html.ActionLink(item.UserName, "OthersNameCard", "NameCards", new { id = item.Id }, null) </dt>
                    }
                }
            }
        </dl>
    </div>

</div>
        </div>
    </div>

    <br />

</div>

